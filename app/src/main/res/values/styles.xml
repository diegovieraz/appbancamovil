<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Launcher" parent="AppTheme"></style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/bg_grey_dark</item>
        <item name="colorPrimaryDark">@color/bg_grey_dark</item>
        <item name="colorAccent">@color/bg_grey_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="You.EditText.EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/bg_grey</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:fontFamily">@font/helvetica</item>
    </style>

    <style name="You.Button.ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/bg_teal</item>
        <item name="android:buttonCornerRadius">@color/bg_teal</item>
    </style>

    <style name="container_adapter_list">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_shadow</item>
    </style>

</resources>